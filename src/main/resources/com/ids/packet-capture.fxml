<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="805.0" prefWidth="1054.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ids.controller.PacketCaptureController">
    <VBox prefHeight="805.0" prefWidth="959.0" spacing="15">

        <HBox alignment="CENTER" spacing="10">
            <Label fx:id="selectedInterfaceLabel" style="-fx-font-size: 14" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="backButton" onAction="#goBack" text="Back" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="startCaptureButton" onAction="#startCapture" text="Start Capture" />
            <Button fx:id="stopCaptureButton" disable="true" onAction="#stopCapture" text="Stop Capture" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <Label text="Search by Protocol:" />
            <TextField fx:id="protocolSearchField" promptText="Enter Protocol (e.g., TCP)" />
            <Label text="That contains : " />
            <TextField fx:id="wordSearchField" prefHeight="23.0" prefWidth="121.0" promptText="word (e.g., youtube)" />
            <Button onAction="#searchByProtocol" text="Search" />
        </HBox>


        <TableView fx:id="packetTableView" prefHeight="395.0" prefWidth="969.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="timestampColumn" prefWidth="97.60000228881836" text="Timestamp" />
                <TableColumn fx:id="sourceIpColumn" prefWidth="96.0" text="Source IP" />
                <TableColumn fx:id="destIpColumn" prefWidth="96.80000305175781" text="Destination IP" />
                <TableColumn fx:id="protocolColumn" prefWidth="88.00006103515625" text="Protocol" />
                <TableColumn fx:id="lengthColumn" prefWidth="97.60003662109375" text="Length" />
                <TableColumn fx:id="flagsColumn" prefWidth="80.0" text="Flags" />
                <TableColumn fx:id="totalBytesColumn" prefWidth="94.66668701171875" text="Total Bytes" />
                <TableColumn fx:id="retransmissionColumn" prefWidth="127.7333984375" text="Retransmissions" />
                <TableColumn fx:id="connectionCountColumn" prefWidth="108.0001220703125" text="Connections" />
                <TableColumn fx:id="flowDurationColumn" prefWidth="121.59979248046875" text="Flow Duration" />
            </columns>
        </TableView>

        <TextArea fx:id="packetDetailsArea" editable="false" prefHeight="197.0" prefWidth="868.0" />

    </VBox>
</StackPane>
